<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3FDE6"
    tools:context=".ForgetPass">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=" Forget Password ?"
            android:gravity="center"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/colorApp"
            android:padding="15sp"
            android:layout_marginTop="10sp"/>

    </RelativeLayout>
        <ImageView
            android:layout_width="130sp"
            android:layout_height="130sp"
            android:src="@drawable/sport"
            android:layout_marginRight="10sp"
            android:layout_marginTop="15sp"
            android:padding="10sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:layout_marginTop="20sp"

            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10sp"
                android:text="Please enter your email address here"
                android:textColor="@color/colorApp"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12sp"
                android:background="@drawable/shape"
                android:hint="exemple@gmail.com"
                android:inputType="textEmailAddress"
                android:padding="20sp"
                android:textSize="20sp"
                android:textStyle="italic" />

        </LinearLayout>
        <Button
            android:layout_width="250sp"
            android:layout_height="wrap_content"
            android:text="Resert Password"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorApp"
            android:layout_margin="10sp"
            android:textSize="18sp"/>
        <Button
            android:id="@+id/goToSignIn"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:text="Back to sig in"
            android:textColor="@color/colorApp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:backgroundTint="@color/white"
            android:layout_margin="10sp"
            android:textSize="18sp"
            android:drawableLeft="@drawable/arrow"
            android:drawableTint="@color/colorApp"/>
    </LinearLayout>


</ScrollView>